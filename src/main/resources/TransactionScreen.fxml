<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.aplikace.model.TransactionController">
    <left>
       <VBox>
          <children>
             <Button fx:id="transaction_account" mnemonicParsing="false" onAction="#loadAccount" prefHeight="40.0" prefWidth="80.0" text="Account">
                <VBox.margin>
                   <Insets left="10.0" top="20.0" />
                </VBox.margin></Button>
             <Button fx:id="transaction_add" mnemonicParsing="false" onAction="#loadAdd" prefHeight="40.0" prefWidth="80.0" text="Add">
                <VBox.margin>
                   <Insets left="10.0" top="20.0" />
                </VBox.margin></Button>
             <Button fx:id="transaction_transaction" mnemonicParsing="false" onAction="#loadTransaction" prefHeight="40.0" prefWidth="80.0" text="Transaction">
                <VBox.margin>
                   <Insets left="10.0" top="20.0" />
                </VBox.margin></Button>
             <Button fx:id="transaction_overview" mnemonicParsing="false" onAction="#loadOverview" prefHeight="40.0" prefWidth="80.0" text="Overview">
                <VBox.margin>
                   <Insets bottom="20.0" left="10.0" top="20.0" />
                </VBox.margin></Button>
             <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
                <image>
                   <Image url="@logo.png" />
                </image>
                <VBox.margin>
                   <Insets bottom="20.0" top="20.0" />
                </VBox.margin>
             </ImageView>
          </children>
       </VBox>
    </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <Label text="Transaction type" textAlignment="CENTER">
                           <VBox.margin>
                              <Insets bottom="10.0" top="20.0" />
                           </VBox.margin>
                        </Label>
                        <ChoiceBox prefHeight="30.0" prefWidth="130.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </ChoiceBox>

                     </children>
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </VBox>
                  <Button alignment="CENTER" mnemonicParsing="false" prefHeight="20.0" prefWidth="130.0" text="Change&#10;view" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets top="50.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
            <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <columns>
                  <TableColumn maxWidth="128.0" minWidth="89.0" prefWidth="89.0" text="Amount">
                  </TableColumn>
                  <TableColumn prefWidth="108.0" text="Category">
                  </TableColumn>
                  <TableColumn minWidth="0.0" prefWidth="100.0" text="Date">
                  </TableColumn>
                  <TableColumn minWidth="0.0" prefWidth="182.0" text="Description">
                  </TableColumn>
               </columns>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
               </VBox.margin>
            </TableView>
         </children>

      </VBox>
   </center>
</BorderPane>
