<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.aplikace.model.SettingsController">

    <left>
        <VBox>
            <children>
                <Button fx:id="account" mnemonicParsing="false" onAction="#loadAccount" prefHeight="40.0" prefWidth="80.0" text="Account">
                    <VBox.margin>
                        <Insets left="10.0" top="20.0" />
                    </VBox.margin></Button>
                <Button fx:id="add" mnemonicParsing="false" onAction="#loadAdd" prefHeight="40.0" prefWidth="80.0" text="Add">
                    <VBox.margin>
                        <Insets left="10.0" top="20.0" />
                    </VBox.margin></Button>
                <Button fx:id="transaction" mnemonicParsing="false" onAction="#loadTransaction" prefHeight="40.0" prefWidth="80.0" text="Transaction">
                    <VBox.margin>
                        <Insets left="10.0" top="20.0" />
                    </VBox.margin></Button>
                <Button fx:id="overview" mnemonicParsing="false" onAction="#loadOverview" prefHeight="40.0" prefWidth="80.0" text="Overview">
                    <VBox.margin>
                        <Insets bottom="20.0" left="10.0" top="20.0" />
                    </VBox.margin></Button>
                <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </VBox.margin>
                </ImageView>
            </children>
        </VBox>
    </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="profilePic" fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets left="198.0" top="15.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@profile_pic.jpg" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="changeUsername" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Change username">
                     <HBox.margin>
                        <Insets bottom="10.0" left="100.0" right="25.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="changePassword" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Change password" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="25.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="changeCurrency" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Change currency">
                     <HBox.margin>
                        <Insets bottom="10.0" left="100.0" right="25.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="changePicture" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Change picture">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="25.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="premium" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: rgba(11,156,49,0.25);" text="Premium" textFill="#a19e9e">
                     <HBox.margin>
                        <Insets bottom="10.0" left="100.0" right="25.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="changeTheme" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: rgba(11,156,49,0.25);" text="Change theme" textFill="#a19e9e">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="25.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <HBox layoutX="10.0" layoutY="330.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="logOut" mnemonicParsing="false" onAction="#loadLogin" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: green;" text="Log out" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="10.0" left="180.0" right="25.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>

</BorderPane>
